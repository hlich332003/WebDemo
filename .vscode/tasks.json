{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Backend (Spring Boot)",
      "type": "shell",
      "command": "./mvnw",
      "args": ["-DskipTests", "spring-boot:run"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run DB (Docker MSSQL)",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "-f", "src/main/docker/mssql.yml", "up", "-d"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Frontend (Angular)",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "options": {
        "cwd": "${workspaceFolder}/WebDemo/src/main/webapp"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
